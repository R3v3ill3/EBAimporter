# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/ea_importer
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ea_importer
DB_USER=username
DB_PASSWORD=password

# Supabase Configuration (alternative to local postgres)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# File Storage
DATA_ROOT=/data
UPLOAD_MAX_SIZE=100MB

# OCR Configuration
TESSERACT_CMD=/usr/local/bin/tesseract
OCR_LANGUAGE=eng
OCR_DPI=300

# ML Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
CLUSTER_THRESHOLD_HIGH=0.95
CLUSTER_THRESHOLD_MEDIUM=0.90
CLUSTER_THRESHOLD_LOW=0.85
MIN_CLAUSE_COUNT=60

# Jurisdiction Settings
JURISDICTION=NSW + Federal (FWC/Fair Work)
TARGET_VERSION=2025.08.v1

# Web Interface
WEB_HOST=0.0.0.0
WEB_PORT=8000
SECRET_KEY=your-secret-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# External APIs
FWC_BASE_URL=https://www.fwc.gov.au
REQUEST_DELAY=1.0

# Development
DEBUG=false
TESTING=false